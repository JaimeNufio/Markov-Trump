import string
import json
from collections import defaultdict
#from pprint import pprint

data = []; #the N-Gram
d = [];
def prepareText(text):
    
    text = text.lower();
    stuff = string.punctuation;
    text = text.translate(None,stuff);
    
    return text;

def parseJSON():
    with open('Trump.json') as data_file:
        jsonInfo = json.load(data_file);
    return jsonInfo

def addTwoGram(text):
    global data
    text = text.split(' ');
    for i in range(len(text)-1):
        gram= (text[i],text[i+1]);
        data.append(gram);
    
def processData():
    global d 
    d = defaultdict(list)

    for firstWord, nextWord in data:
        d[firstWord].append(nextWord)

def stepThrough():
    text = parseJSON()
    for i in range(len(text)):
        currentText = prepareText(text[i]["text"]);
        addTwoGram(currentText);
boop = "OMG DID IT WORK";
print(prepareText(boop));
print(d);
